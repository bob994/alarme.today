{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "module": "esnext",
    "target": "es5",
    "jsx": "preserve",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true
  }
}
